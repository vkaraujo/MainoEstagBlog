<form action="<%= post_comments_path(@post) %>" method="post" class="mb-3">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div>
        <textarea name="comment[content]" rows="5" cols="50"></textarea>
    </div>
    <input type="submit" value="Post Comment" class="btn btn-primary mt-1">
</form>